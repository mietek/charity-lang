#------------------------------------------------------------------------------
#
# CHARITY MAKEFILE
#
#------------------------------------------------------------------------------

SRCDIR=@top_srcdir@
CC=@CC@
LEX=@LEX@
YACC=@YACC@

INC=$(SRCDIR)/Include

CFLAGS=@CFLAGS@ 
CPPFLAGS=@CPPFLAGS@ -I$(INC)

# THE OBJECT FILES

C_SRCS = listParse.c parse.c printParse.c
OBJS = $(C_SRCS:.c=.o) y.tab.o lex.yy.o

.PHONY:	all clean distclean

all: $(OBJS)

clean:
	$(RM) *.o *.d

distclean: clean
	$(RM) Makefile

-include $(C_SRCS:.c=.d)

.c.d :
	$(SHELL) -ec '$(CC) -M $(CPPFLAGS) $< \
		| sed '\''s/\($*\)\.o[ :]*/\1.o $@ : /g'\'' > $@; \
		[ -s $@ ] || rm -f $@'

.c.o :
	@echo "Compiling $@..."
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $< -o $@
