#------------------------------------------------------------------------------
#
# CHARITY MAKEFILE
#
#------------------------------------------------------------------------------

SRCDIR=@top_srcdir@
CC=@CC@
LEX=@LEX@
YACC=@YACC@

INC=$(SRCDIR)/Include

CFLAGS=@CFLAGS@ -DNDEBUG
CPPFLAGS=@CPPFLAGS@ -I$(INC)

# THE OBJECT FILES

C_SRCS = ctTranslate.c
OBJS = $(C_SRCS:.c=.o)

.PHONY: all clean distclean

all: $(OBJS)

clean:
	$(RM) *.o *.d

distclean: clean
	$(RM) Makefile

-include $(C_SRCS:.c=.d)

.c.d :
	$(SHELL) -ec '$(CC) -M $(CPPFLAGS) $< \
		| sed '\''s/\($*\)\.o[ :]*/\1.o $@ : /g'\'' > $@; \
		[ -s $@ ] || rm -f $@'

.c.o :
	@echo "Compiling $@..."
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $< -o $@
